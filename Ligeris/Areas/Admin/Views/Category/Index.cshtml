@model List<Category>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Category List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-bookmark-plus"></i>
					Create New Category

				</a>
			</div>

		</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr class="text-center">
					<th>Category Name</th>
					<th>Display Order</th>
					<th>Menu</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.OrderBy(u => u.DisplayOrder))
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.DisplayOrder</td>
						<td class="text-center">
							<div class="d-flex justify-content-center" role="group">
								<a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
									<i class="bi bi-pencil"></i> Edit
								</a>
								<a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash"></i>Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>

		</table>
	</<div>
</div>