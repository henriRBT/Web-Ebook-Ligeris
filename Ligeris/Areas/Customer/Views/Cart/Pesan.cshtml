@model ShoopingCardVM
<form method="post">
	<br />
	<div class="container">
		<div class="card shadow border-0">
			
			<div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
				<div class="row px-4">
					<div class="col-6">
						<h5 class="pt-2 text-white">
							Shopping Cart
						</h5>
					</div>
				<div class="col-6 text-end">
					<a asp-action="Index" class="btn btn-outline-light btn-sm">Back to Cart</a>
				</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Detail Pemesan</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Nama</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.Name" class="form-control" />
									<span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>No Handphone</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.nomorHp" class="form-control" />
									<span asp-validation-for="OrderHeader.nomorHp" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Alamat Pengiriman</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.alamat" class="form-control" />
									<span asp-validation-for="OrderHeader.alamat" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Kota</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.kota" class="form-control" />
									<span asp-validation-for="OrderHeader.kota" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Negara</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.negara" class="form-control" />
									<span asp-validation-for="OrderHeader.negara" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Kode Pos</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.kodePos" class="form-control" />
									<span asp-validation-for="OrderHeader.kodePos" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Jumlah Pesanan:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach(var item in Model.ShoopingCartList)
								{
									<li class="list-group-item d-flex justify-content-between">
										<div>
											<h6 class="my-0">@item.Product.Title</h6>
											<small class="text-muted">Harga: @item.Harga</small>
										</div>
										<span class="text-muted">@((item.Harga*item.Count).ToString("c"))</span>
									</li>
								}
								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">Total</small>
									<strong class="text-info">Rp @Model.OrderHeader.TotalOrder.ToString("c")</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p style="color:maroon; font-size:14px;">Perkiraan Sampai:
							@DateTime.Now.AddDays(7).ToShortDateString()
							- @DateTime.Now.AddDays(14).ToShortDateString()
						</p>
						</p>
					</div>
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Pesan</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>